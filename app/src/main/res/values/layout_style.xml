<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 比较常用的宽高 -->

    <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#E2E2E2</item>
    </style>
    <!-- 纵向线条 -->
    <style name="v_line">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#E2E2E2</item>
    </style>

    <!-- Team菜单ImageView的样式 -->

    <!-- Team菜单TextView的样式 -->

    <style name="team_issue_detail_line" parent="@style/h_line">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="team_new_issue_layout" parent="@style/fill_wrap">
        <item name="android:orientation">horizontal</item>
        <!--<item name="android:background">?attr/layout_item_bg</item>-->
        <item name="android:padding">15dp</item>
    </style>

</resources>
